<?xml version="1.0"?>
<configuration>

<property>
  <name>yarn.resourcemanager.address</name>
  <value>localhost</value>
</property>
<property>
  <name>yarn.nodemanager.aux-services</name>
  <value>mapreduce_shuffle</value>
</property>

<property>
<name>yarn.app.mapreduce.am.staging-dir</name>
<value>/user</value>
</property>

<property>
  <description>Classpath for typical applications.</description>
  <name>yarn.application.classpath</name>
  <value>$HADOOP_CONF_DIR,$HADOOP_COMMON_HOME/lib/*,
         $HADOOP_COMMON_HOME/share/hadoop/common/*,
      	 $HADOOP_COMMON_HOME/share/hadoop/common/lib/*,
         $HADOOP_COMMON_HOME/share/hadoop/yarn/*,
	       $HADOOP_COMMON_HOME/share/hadoop/yarn/lib/*,
         $HADOOP_COMMON_HOME/share/hadoop/mapreduce/*,
         $HADOOP_COMMON_HOME/share/hadoop/mapreduce/lib/*,
         $HADOOP_COMMON_HOME/share/hadoop/hdfs/*,
         $HADOOP_COMMON_HOME/share/hadoop/hdfs/lib/*
  </value>
</property>
<property>
  <name>yarn.nodemanager.aux-services.mapreduce.shuffle.class</name>
  <value>org.apache.hadoop.mapred.ShuffleHandler</value>
</property>
<property>
  <name>yarn.log-aggregation-enable</name>
  <value>true</value>
</property>

<property>
    <name>yarn.dispatcher.exit-on-error</name>
    <value>true</value>
</property>

<property>
  <name>yarn.nodemanager.local-dirs</name>
  <value>/home/hx/hadoop/yarn/nm-local-dir</value>
</property>
<!-- 本地路径-->

<!-- 本地路径,nm存放container日志的本地路径-->

<property>
  <name>yarn.nodemanager.log-dirs</name>
  <value>/home/hx/hadoop/yarn/containers</value>
</property>

<property>
  <description>Where to aggregate logs</description>
<!-- hdfs路径,container日志在hdfs存放的路径-->
  <name>yarn.nodemanager.remote-app-log-dir</name>
  <value>/var/log/hadoop-yarn/app</value>
</property>

<property>
<name>yarn.nodemanager.delete.debug-delay-sec</name>
<value>10000</value>
</property>
<!-- Site specific YARN configuration properties -->

</configuration>
